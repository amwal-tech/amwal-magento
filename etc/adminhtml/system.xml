<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="payment">
			<group id="amwal_payments" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Amwal Payments</label>
				<attribute type="expanded">1</attribute>
				<frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
				<field id="active" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="0">
					<label>Enable Amwal Gateway</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<config_path>payment/amwal_iframe/active</config_path>
				</field>

				<!-- Amwal Gateway Settings -->
				<group id="amwal_iframe" translate="label" showInDefault="1" showInWebsite="1" showInStore="1" sortOrder="5">
					<label>Amwal Gateway Settings</label>
					<attribute type="expanded">0</attribute>
					<frontend_model>Magento\Config\Block\System\Config\Form\Fieldset</frontend_model>
					<field id="title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Title</label>
						<config_path>payment/amwal_iframe/title</config_path>
					</field>
					<field id="account_id" translate="label" type="obscure" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Merchant ID</label>
						<backend_model>Amwal\Payments\Model\System\Config\Backend\Iframe\Encrypted</backend_model>
						<config_path>payment/amwal_iframe/account_id</config_path>
					</field>
					<field id="country_code" translate="label" type="select" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Merchant Country</label>
						<source_model>Magento\Directory\Model\Config\Source\Country</source_model>
					</field>
					<field id="preferred_lang" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Preferred Language</label>
						<config_path>payment/amwal_iframe/preferred_lang</config_path>
					</field>
					<field id="dark_mode" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Dark Mode</label>
						<config_path>payment/amwal_iframe/dark_mode</config_path>
					</field>
					<field id="debug" translate="label" type="select" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Debug</label>
						<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
						<config_path>payment/amwal_iframe/debug</config_path>
					</field>
					<field id="currency" translate="label" type="select" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Accepted Currency</label>
						<source_model>Magento\Config\Model\Config\Source\Locale\Currency</source_model>
						<config_path>payment/amwal_iframe/currency</config_path>
					</field>
					<field id="allowspecific" translate="label" type="allowspecific" sortOrder="14" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Payment from Applicable Countries</label>
						<source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
						<config_path>payment/amwal_iframe/allowspecific</config_path>
					</field>
					<field id="specificcountry" translate="label" type="multiselect" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="0">
						<label>Payment from Specific Countries</label>
						<source_model>Magento\Directory\Model\Config\Source\Country</source_model>
					</field>
				</group>
			</group>
		</section>
	</system>
</config>
