<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/9.1/phpunit.xsd"
         colors="true"
         columns="max"
         beStrictAboutTestsThatDoNotTestAnything="false"
         bootstrap="/tmp/m2/dev/tests/api-functional/framework/bootstrap.php"
         testSuiteLoaderClass="Magento\TestFramework\ApiSuiteLoader"
         testSuiteLoaderFile="/tmp/m2/dev/tests/api-functional/framework/Magento/TestFramework/ApiSuiteLoader.php"
>
    <!-- Test suites definition -->
    <testsuites>
        <testsuite name="Amwal REST web API functional tests real suite">
            <!-- <directory>../../../vendor/amwal/payments/Test/Api</directory> -->
            <file>../../../vendor/magento/magento2-base/dev/tests/api-functional/testsuite/Magento/Quote/Api/GuestCartRepositoryTest.php</file>
        </testsuite>
    </testsuites>

    <!-- PHP INI settings and constants definition -->
    <php>
        <includePath>/tmp/m2/dev/tests/api-functional/testsuite</includePath>
        <const name="TESTS_INSTALL_CONFIG_FILE" value="../../../vendor/amwal/payments/.github/workflows/config/install-config-mysql.php"/>
        <!-- Local XML post installation configuration file ('.dist' extension will be added, if the specified file doesn't exist) -->
        <const name="TESTS_POST_INSTALL_SETUP_COMMAND_CONFIG_FILE" value="../../../vendor/amwal/payments/.github/workflows/config/post-install-setup-command-config.php"/>
        <const name="TESTS_GLOBAL_CONFIG_FILE" value="../../../vendor/amwal/payments/.github/workflows/config/config-global.php"/>
        <!-- WebSerivice Type -->
        <const name="TESTS_WEB_API_ADAPTER" value="rest"/>
        <!-- Webserver URL -->
        <const name="TESTS_BASE_URL" value="http://magento2.test/"/>
        <!-- Webserver API user -->
        <const name="TESTS_WEBSERVICE_USER" value="johndoe"/>
        <!-- Webserver API key -->
        <const name="TESTS_WEBSERVICE_APIKEY" value="johndoe!1234"/>
        <!-- Define if debugger should be started using XDEBUG_SESSION cookie -->
        <const name="TESTS_XDEBUG_ENABLED" value="false"/>
        <!-- Define XDEBUG_SESSION cookie value-->
        <const name="TESTS_XDEBUG_SESSION" value="phpstorm" />
        <!--Generate documentation from REST tests and put it into var/log/rest-documentation directory-->
        <const name="GENERATE_REST_DOCUMENTATION" value="false" />

        <ini name="date.timezone" value="Asia/Riyadh"/>

        <!-- Semicolon-separated 'glob' patterns, that match global XML configuration files -->
        <const name="TESTS_GLOBAL_CONFIG_DIR" value="../../../app/etc"/>
        <!-- Whether to cleanup the application before running tests or not -->
        <const name="TESTS_CLEANUP" value="disabled"/>
        <!--Defines if Magento should be installed before tests execution-->
        <const name="TESTS_MAGENTO_INSTALLATION" value="disabled"/>
        <!-- Magento mode for tests execution. Possible values are "default", "developer" and "production". -->
        <const name="TESTS_MAGENTO_MODE" value="default"/>
        <const name="USE_OVERRIDE_CONFIG" value="disabled"/>
    </php>

    <!-- Test listeners -->
    <listeners>
        <listener class="Magento\TestFramework\Event\PhpUnit"/>
    </listeners>
</phpunit>
