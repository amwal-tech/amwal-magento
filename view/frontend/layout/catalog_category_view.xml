    <body>
        <referenceBlock name="category.product.addto">
            <block ifconfig="payment/amwal_payments/express_checkout_active" class="Magento\Catalog\Block\Product\ProductList\Item\Block" name="amwal.express-checkout.button.listing" template="Amwal_Payments::express/button-listing.phtml" cacheable="false">
                <arguments>
                    <argument name="view_model" xsi:type="object">
                        Amwal\Payments\ViewModel\ExpressCheckoutButton
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
